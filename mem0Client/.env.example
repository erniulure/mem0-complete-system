# =============================================================================
# Mem0 记忆管理系统 - 环境变量配置文件
# 复制此文件为 .env 并填入你的配置
# =============================================================================

# AI API 密钥配置 (至少需要一个)
# OpenAI API 密钥
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API 密钥
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API 密钥
GOOGLE_API_KEY=your_google_api_key_here

# Mem0 API 配置
MEM0_API_KEY=local_api_key

# 数据库配置
POSTGRES_URL=postgresql://mem0:mem0password@localhost:5432/mem0db
QDRANT_URL=http://localhost:6333

# Web界面认证配置
MEM0_AUTH_MODE=simple
MEM0_SECRET_KEY=your_secret_key_change_in_production
MEM0_SESSION_TIMEOUT=3600
MEM0_MAX_LOGIN_ATTEMPTS=5
MEM0_LOCKOUT_DURATION=300

# 管理员账户配置
MEM0_ADMIN_USER=admin
MEM0_ADMIN_PASS=admin123

# 用户数据文件路径
MEM0_USERS_FILE=users.json

# 日志配置
MEM0_LOG_LEVEL=INFO
MEM0_LOG_FILE=/opt/mem0/logs/mem0.log

# 备份配置
MEM0_BACKUP_ENABLED=true
MEM0_BACKUP_INTERVAL=daily
MEM0_BACKUP_RETENTION=7

# 网络配置
MEM0_API_HOST=0.0.0.0
MEM0_API_PORT=8888
MEM0_WEB_HOST=0.0.0.0
MEM0_WEB_PORT=8503

# SSL配置 (生产环境)
MEM0_SSL_ENABLED=false
MEM0_SSL_CERT_PATH=/etc/ssl/certs/mem0.crt
MEM0_SSL_KEY_PATH=/etc/ssl/private/mem0.key

# Docker配置
COMPOSE_PROJECT_NAME=mem0
DOCKER_RESTART_POLICY=unless-stopped

# 性能配置
MEM0_MAX_WORKERS=4
MEM0_MAX_MEMORY=2g
MEM0_MAX_UPLOAD_SIZE=100m
