# ===========================================
# Mem0 记忆管理系统 - 环境配置文件
# ===========================================

# ===========================================
# 基础配置
# ===========================================
# 部署模式: standalone(一键部署) | distributed(分布式部署)
DEPLOYMENT_MODE=standalone

# ===========================================
# 端口配置 (可自定义)
# ===========================================
# Web界面端口
WEBUI_PORT=8503

# Mem0 API端口
MEM0_API_PORT=8888

# PostgreSQL端口
POSTGRES_PORT=5433

# Qdrant端口
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# ===========================================
# AI服务配置 (支持内置或外部)
# ===========================================
# Gemini Balance配置
# 模式: integrated(集成部署) | external(外部服务)
GEMINI_BALANCE_MODE=integrated

# 内置Gemini Balance配置
GEMINI_BALANCE_PORT=8000
GEMINI_BALANCE_MYSQL_PORT=3307

# 外部Gemini Balance配置 (当GEMINI_BALANCE_MODE=external时使用)
EXTERNAL_GEMINI_BALANCE_URL=http://localhost:8000/v1
EXTERNAL_GEMINI_BALANCE_TOKEN=q1q2q3q4

# ===========================================
# 数据库配置
# ===========================================
# PostgreSQL配置
POSTGRES_DB=mem0
POSTGRES_USER=mem0
POSTGRES_PASSWORD=mem0_secure_password_2024
POSTGRES_HOST=mem0-postgres

# Gemini Balance MySQL配置 (仅在integrated模式下使用)
MYSQL_ROOT_PASSWORD=123456
MYSQL_DATABASE=gemini_balance
MYSQL_HOST=gemini-balance-mysql

# ===========================================
# OpenAI兼容API配置 (备用方案)
# ===========================================
# 当无法使用Gemini Balance时的备用配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# ===========================================
# 安全配置
# ===========================================
# 会话密钥 (用于用户认证)
SESSION_SECRET_KEY=your-secret-key-change-this-in-production

# 默认管理员账户
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# ===========================================
# 高级配置
# ===========================================
# 日志级别: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# 数据持久化路径
DATA_PATH=./data
LOGS_PATH=./logs

# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=5
